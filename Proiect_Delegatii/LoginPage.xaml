<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_Delegatii.LoginPage"
             BackgroundColor="#374147">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lbl_username" Text="Username" HorizontalOptions="Center" TextColor="#fffced" />
            <Entry x:Name="entry_username" Placeholder="Username" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Label x:Name="lbl_pass" Text="Password" HorizontalOptions="Center" TextColor="#fffced"/>
            <Entry x:Name="entry_pass" Placeholder="Password" IsPassword="True" HorizontalOptions="Center" VerticalOptions="Center" />
            <Button x:Name="SigninBtn" Text="Sign in" Clicked="SignInEvent" HorizontalOptions="Center" VerticalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>